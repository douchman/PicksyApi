<configuration scan="false">
    <include resource="logback/logback-patterns.xml"/>

    <springProfile name="local">
        <!-- Spring Security 로그 레벨 설정 -->
        <logger name="org.springframework.security" level="DEBUG"/>

        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${LOG_PATTERN_CONSOLE}</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="prod">

        <appender name="STARTUP_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <springProperty scope="context" name="LOG_PATH" source="logging.file.path"/>
        <!-- Spring Security 로그 레벨 설정 : WARN noisy 최소화 -->
        <logger name="org.springframework.security" level="WARN"/>

        <!-- Hibernate SQL 로그 제거 -->
        <logger name="org.hibernate.SQL" level="WARN"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN"/>

        <!-- Spring Debug 로그 제거 -->
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.springframework.boot.autoconfigure" level="WARN"/>

        <!-- Tomcat 과다 로그 억제 -->
        <logger name="org.apache.coyote.http11.Http11NioProtocol" level="WARN"/>
        <logger name="org.apache.catalina.core.StandardService" level="WARN"/>
        <logger name="org.apache.catalina.core.StandardEngine" level="WARN"/>

        <!-- 커넥션 풀 (Hikari) 로그는 최소화 -->
        <logger name="com.zaxxer.hikari" level="INFO"/>

        <logger name="org.springframework.boot" level="INFO" additivity="false">
            <appender-ref ref="STARTUP_CONSOLE"/>
        </logger>

        <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/app.json</file>
            <append>true</append>
            <prudent>false</prudent>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/app.%d{yyyy-MM-dd}.%i.log.json</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
                <totalSizeCap>1GB</totalSizeCap>
            </rollingPolicy>

            <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
        </appender>

        <root level="INFO">
            <appender-ref ref="FILE_JSON"/>
            <appender-ref ref="STARTUP_CONSOLE"/>
        </root>
    </springProfile>
</configuration>
